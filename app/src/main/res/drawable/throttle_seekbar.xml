<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:id="@android:id/background" android:left="@dimen/throttle_bar_mid_indent_white">
        <shape>
            <corners
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="5dp"
                android:topLeftRadius="0dp"
                android:topRightRadius="5dp"/>
            <gradient
                android:centerColor="@color/flat_white"
                android:startColor="@color/flat_white"
                android:endColor="@color/flat_white"
                android:type="linear"/>
        </shape>
    </item>
    <item android:id="@android:id/background" android:right="@dimen/throttle_bar_mid_indent">
        <shape>
            <corners
                android:bottomLeftRadius="5dp"
                android:bottomRightRadius="0dp"
                android:topLeftRadius="5dp"
                android:topRightRadius="0dp"/>
            <gradient
                android:centerColor="@color/flat_yellow"
                android:startColor="@color/flat_red1"
                android:endColor="@color/flat_green"
                android:type="linear"/>
        </shape>
    </item>


    <item android:id="@android:id/progress">
        <clip android:drawable="@drawable/throttle_progress" />
    </item>
</layer-list>