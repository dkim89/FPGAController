<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="spring15.ec551.fpgacontroller.fragments.ControllerSettingsFragment">

    <spring15.ec551.fpgacontroller.resources.CustomTextView
        android:id="@+id/controller_instruc_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/vector_margin_first"
        android:textSize="@dimen/controller_text1"/>

    <view
        android:id="@+id/controller_instruc_baseline"
        android:layout_width="@dimen/controller_baseline_width"
        android:layout_height="@dimen/controller_baseline_height"
        android:background="@drawable/calibration_line_neutral"
        android:layout_centerInParent="true" />

    <!-- Lower down views = Higher in Z-Axis -->
    <view
        android:id="@+id/device_image"
        android:layout_width="@dimen/device_image_width"
        android:layout_height="@dimen/device_image_height"
        android:background="@drawable/tablet_mid_image"
        android:layout_centerInParent="true" />

    <spring15.ec551.fpgacontroller.resources.CustomTextView
        android:id="@+id/controller_notify_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/device_image"
        android:layout_marginTop="@dimen/controller_notify_margin"
        android:textSize="@dimen/controller_text1"/>

</RelativeLayout>
