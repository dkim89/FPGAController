<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fragment_background"/>

    <LinearLayout
        android:id="@+id/fragment_control"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hud_height"
        android:layout_margin="@dimen/hud_margin_dimen"
        android:background="@color/hud_background"
        android:orientation="horizontal"
        android:weightSum="24"
        android:layout_alignParentTop="true">

        <View
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <spring15.ec551.fpgacontroller.CustomTextView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:gravity="center"
            android:textSize="@dimen/status_text_size"
            android:text="@string/controller" />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4" >
            <View
                android:id="@+id/controller_indicator"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_width="@dimen/status_circle_size"
                android:layout_height="@dimen/status_circle_size"
                android:background="@drawable/status_not_connected"/>
        </RelativeLayout>

        <View
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <spring15.ec551.fpgacontroller.CustomTextView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:gravity="center"
            android:textSize="@dimen/status_text_size"
            android:text="@string/vehicle"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4">
            <View
                android:id="@+id/vehicle_indicator"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_width="@dimen/status_circle_size"
                android:layout_height="@dimen/status_circle_size"
                android:background="@drawable/status_not_connected"/>
        </RelativeLayout>

        <View
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

    </LinearLayout>


</RelativeLayout>
